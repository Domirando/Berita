<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="30dp"
    android:layout_gravity="center"
    tools:context=".CreateAccountFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageView
            android:id="@+id/imageView3"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_width="300dp"
            android:layout_height="200dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginVertical="40dp"
            android:src="@drawable/loading_wallpaper"
            tools:ignore="MissingConstraints" />
        <TextView
            app:layout_constraintTop_toBottomOf="@id/imageView3"
            app:layout_constraintStart_toStartOf="parent"
            android:id="@+id/title"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Create an Account"
            android:textSize="27dp"
            android:textColor="@color/black"
            android:layout_gravity="center_horizontal"/>
        <LinearLayout
            app:layout_constraintTop_toBottomOf="@id/title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/email"
            android:layout_marginTop="40dp"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Email"
                    android:textStyle="bold"
                    android:layout_marginBottom="10dp"
                    android:textSize="21dp"
                    android:layout_marginLeft="25dp"
                    android:textColor="#595959"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="*"
                    android:textStyle="bold"
                    android:layout_marginTop="-3dp"
                    android:layout_marginBottom="10dp"
                    android:textSize="20dp"
                    android:textColor="#F46767"/>
            </LinearLayout>
            <EditText
                android:id="@+id/email_input"
                android:background="@drawable/input_border"
                android:paddingVertical="15dp"
                android:paddingHorizontal="25dp"
                android:textColorHint="#888888"
                android:hint="Email"
                android:textStyle="bold"
                android:textSize="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <LinearLayout
                android:background="@drawable/rounded_corner"
                android:paddingHorizontal="20dp"
                android:orientation="horizontal"
                android:paddingVertical="5dp"
                android:layout_width="match_parent"
                android:backgroundTint="#FAE2E2"
                android:visibility="gone"
                android:id="@+id/warn_email"
                android:layout_marginTop="8dp"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginRight="5dp"
                    android:src="@drawable/error_icon"
                    />
                <TextView
                    android:layout_gravity="center_vertical"
                    android:textSize="16dp"
                    android:textColor="#F44336"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Invalid email"/>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            app:layout_constraintTop_toBottomOf="@id/email"
            android:layout_width="match_parent"
            android:id="@+id/password"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Password"
                    android:textStyle="bold"
                    android:layout_marginBottom="10dp"
                    android:textSize="21dp"
                    android:layout_marginLeft="25dp"
                    android:textColor="#595959"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="*"
                    android:textStyle="bold"
                    android:layout_marginTop="-3dp"
                    android:layout_marginBottom="10dp"
                    android:textSize="20dp"
                    android:textColor="#F46767"/>
            </LinearLayout>
            <EditText
                android:id="@+id/password_input"
                android:paddingVertical="15dp"
                android:background="@drawable/input_border"
                android:paddingHorizontal="25dp"
                android:hint="Password"
                android:textStyle="bold"
                android:textSize="20dp"
                android:textColorHint="#888888"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <LinearLayout
                android:background="@drawable/rounded_corner"
                android:paddingHorizontal="20dp"
                android:orientation="horizontal"
                android:paddingVertical="5dp"
                android:layout_width="match_parent"
                android:visibility="gone"
                android:backgroundTint="#FAE2E2"
                android:id="@+id/warn_password"
                android:layout_marginTop="8dp"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginRight="5dp"
                    android:src="@drawable/error_icon"
                    />
                <TextView
                    android:layout_gravity="center_vertical"
                    android:textSize="16dp"
                    android:textColor="#F44336"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Invalid password"/>
            </LinearLayout>

        </LinearLayout>
        <CheckBox
            app:layout_constraintTop_toBottomOf="@id/password"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Remember me"
            android:textColor="#4F5459"
            android:textStyle="bold"
            android:id="@+id/check"
            android:layout_marginLeft="20dp"
            android:layout_marginVertical="5dp"
            android:buttonTint="#F16A6A"
            android:textSize="19dp"
            tools:ignore="MissingConstraints" />
        <Button
            app:layout_constraintTop_toBottomOf="@id/check"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/sign"
            android:text="Sign up"
            android:background="@drawable/sign_empty"
            />
        <LinearLayout
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/sign"
            android:layout_width="wrap_content"
            android:id="@+id/sign_in"
            android:orientation="horizontal"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="25dp"
            android:layout_height="wrap_content"
            tools:ignore="MissingConstraints">
            <TextView
                android:id="@+id/q1"
                android:textColor="#959595"
                android:textSize="16dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Already have an account?"/>
            <TextView
                android:layout_marginLeft="8dp"
                android:textColor="#FF6A6A"
                android:textSize="16dp"
                android:id="@+id/btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sign in"/>
        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>